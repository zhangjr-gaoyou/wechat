.weui-tab__content{
    padding-top: 60px;
    text-align: center;
}

.weui-grid__icon {
  display: block;
  width: 112px;
  height: 112px;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden

}

.weui-media-box__graythumb {
 
 filter: grayscale(100%);

}
.userinfo {
  margin-top: 5rpx;
  padding-top: 15rpx;
  height: 100%;
  width: 100%;
  background: #fff;
  border: 0px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}


.button-view {
  margin: 0 auto;
  padding-top: 15px;
  padding-bottom: 15px;
  
  width: 60%;

}

.weui-footer{
    margin-bottom: 50px;
}

.button-sp-area{
    margin: 0 auto;
    padding-top: 15px;
    width: 60%;
}




